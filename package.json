{
  "name": "fluffy",
  "version": "1.0.0",
  "description": "Baseline for Webpack, Typescript, Angular2",
  "main": "index.js",
  "scripts": {
    "prestart": "npm i && npm run lint",
    "build": "set NODE_ENV=production && webpack",
    "start": "set NODE_ENV=development && webpack-dev-server",
    "lint": "find ./app -name '*.ts' | xargs tslint",
    "ci": "export NODE_ENV=production && find ./app -name '*.ts' | xargs tslint && webpack --progress --colors --config --bail",
    "size": "webpack --json | webpack-bundle-size-analyzer",
    "test": "karma start"
  },
  "author": "Christopher Hill",
  "repository": {
    "type": "git",
    "url": "git://github.com/christopherhill/fluffy.git"
  },
  "license": "ISC",
  "devDependencies": {
    "@angular/compiler-cli": "^0.6.4",
    "@angular/platform-server": "^2.0.2",
    "@types/es6-shim": "^0.31.32",
    "@types/jasmine": "^2.5.35",
    "angular2-template-loader": "^0.5.0",
    "awesome-typescript-loader": "^2.2.4",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.22.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-jasmine": "^1.0.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "phantomjs-prebuilt": "^2.1.13",
    "raw-loader": "^0.5.1",
    "style-loader": "^0.13.1",
    "typescript": "^2.0.3",
    "webpack": "^2.1.0-beta.25",
    "webpack-dev-server": "^2.1.0-beta.8"
  },
  "dependencies": {
    "@angular/common": "^2.0.2",
    "@angular/compiler": "^2.0.2",
    "@angular/core": "^2.0.2",
    "@angular/forms": "^2.0.2",
    "@angular/http": "^2.0.2",
    "@angular/platform-browser": "^2.0.2",
    "@angular/platform-browser-dynamic": "^2.0.2",
    "@angular/router": "^3.0.2",
    "@types/core-js": "^0.9.34",
    "@types/jasmine": "^2.5.35",
    "@types/node": "^6.0.45",
    "core-js": "^2.4.1",
    "jquery": "^3.1.1",
    "rxjs": "^5.0.0-beta.12",
    "zone.js": "^0.6.25"
  }
}
